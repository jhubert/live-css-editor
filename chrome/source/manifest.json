{
  "name": "__MSG_extName__",
  "manifest_version": 2,
  "version": "1.7.2",
  "background": {
    "page": "bg.html"
  },
  "options_page": "options.html",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  "permissions": [
    "tabs", "<all_urls>"
  ],
  "content_scripts": [ {
    "matches": ["<all_urls>"],
    "js": ["inject.js"]
  }],
  "browser_action": {
    "default_icon": "icon-color.png",
    "default_text": "none",
    "name": "__MSG_extBrowserActionName__"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
